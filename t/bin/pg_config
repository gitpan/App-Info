#!/usr/bin/perl -w

if ($ARGV[0] eq '--version') {
    print "PostgreSQL 8.0.0\n";
} elsif ($ARGV[0] eq '--bindir') {
    print "t/bin\n";
} elsif ($ARGV[0] eq '--includedir') {
    print "t/testinc\n";
} elsif ($ARGV[0] eq '--libdir' || $ARGV[0] eq '--pkglibdir') {
    print "t/testlib\n";
} elsif ($ARGV[0] eq '--configure') {
    print "\n";
}
